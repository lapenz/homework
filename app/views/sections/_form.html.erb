<%= form_for @section, :html => { :multipart => true } do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :lesson_id %><br>
    <%= f.collection_select(:lesson_id, Lesson.all, :id, :description_detailed, {}, {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :audio %><br>
    <audio controls controlsList="nodownload">
      <source src="<%= @section.audio %>" type="audio/mp4">
      <source src="<%= @section.second_audio %>" type="audio/ogg">
      <p>Your browser does not support HTML5 audio, but you can still
        <a href="<%= @section.audio %>">download the file</a>.</p>
    </audio>
  </div>
    <div class="form-group">
        <%= f.label "audio ACC(mp4)" %>
        <%= f.file_field :audio, :class => 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label "audio OGG" %>
        <%= f.file_field :second_audio, :class => 'form-control' %>
    </div>

  <div class="actions">
    <%= f.submit :class => 'btn btn-default' %>
  </div>
<% end %>
