<%= form_for @section, :html => { :multipart => true } do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :lesson_id %><br>
    <%= f.collection_select(:lesson_id, Lesson.all, :id, :description_detailed, {}, {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :audio %><br>
    <audio controls>
      <source src="<%= @section.audio %>" type="audio/aac">
      <source src="<%= @section.audio %>" type="audio/ogg">
      <source src="<%= @section.audio %>" type="audio/mpeg">
      <source src="<%= @section.audio %>" type="audio/wav">
      Your browser does not support the audio element.
    </audio>
    <%= f.file_field :audio, :class => 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-default' %>
  </div>
<% end %>
