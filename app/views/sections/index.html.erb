<p id="notice"><%= notice %></p>

<h1>Listing Sections</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Lesson</th>
      <th>Description</th>
      <th>Audio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.lesson.description_detailed %></td>
        <td><%= section.description %></td>
        <td><audio controls>
          <source src="<%= section.audio %>" type="audio/mpeg">
          Your browser does not support the audio element.
        </audio></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to 'Edit', edit_section_path(section), :class => 'btn btn-default btn-sm', :role => 'button' %>
            <%= link_to 'Show', section, :class => 'btn btn-default btn-sm', :role => 'button' %>
            <%= link_to 'Destroy', section, :class => 'btn btn-danger btn-sm', :role => 'button', method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path, :class => 'btn btn-default' %>
