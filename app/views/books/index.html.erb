<h1>Listing Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.description %></td>
        <td>
          <div class="btn-group" role="group">
            <% if can? :edit, Book %>
                <%= link_to 'Edit', edit_book_path(book), :class => 'btn btn-default btn-sm', :role => 'button' %>
            <% end %>
            <% if can? :show, Book %>
                <%= link_to 'Show', book, :class => 'btn btn-default btn-sm', :role => 'button' %>
            <% end %>
            <% if can? :destroy, Book %>
                <%= link_to 'Destroy', book, :class => 'btn btn-danger btn-sm', :role => 'button', method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, :class => 'btn btn-default' %>
