<p id="notice"><%= notice %></p>

<h1>Listing Questions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Section</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.section.description_detailed %></td>
        <td><%= question.description %></td>
        <td>
          <div class="btn-group" role="group">
            <%= link_to 'Edit', edit_section_question_path(@section, question), :class => 'btn btn-default btn-sm', :role => 'button' %>
            <%= link_to 'Show', [@section, question], :class => 'btn btn-default btn-sm', :role => 'button' %>
            <%= link_to 'Destroy', [@section, question], :class => 'btn btn-danger btn-sm', :role => 'button', method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_section_question_path, :class => 'btn btn-default' %>
